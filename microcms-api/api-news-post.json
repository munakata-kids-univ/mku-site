{
  "apiFields": [
    {
      "fieldId": "title",
      "name": "タイトル",
      "kind": "text",
      "description": "投稿記事のタイトル",
      "required": true
    },
    {
      "fieldId": "category",
      "name": "カテゴリー",
      "kind": "relation",
      "description": "newsCategory API を参照（お知らせ／メディア掲載の区分もここで判定）",
      "required": true,
      "relation": {
        "api": "newsCategory",
        "displayFieldId": "name",
        "multipleSelect": false
      }
    },
    {
      "fieldId": "publishedDate",
      "name": "公開日",
      "kind": "date",
      "description": "表示用の日付。空の場合は publishedAt を代用",
      "dateFormat": true
    },
    {
      "fieldId": "thumbnail",
      "name": "サムネイル画像",
      "kind": "media",
      "description": "一覧カードや OGP 用の画像（推奨 1280×720px）",
      "imageSizeValidation": {
        "imageSize": { "width": 1280, "height": 720 }
      }
    },
    {
      "fieldId": "body",
      "name": "本文",
      "kind": "richEditorV2",
      "description": "リッチテキストで本文を入力",
      "required": true,
      "richEditorV2Options": [
        "headerFour", "undo", "redo", "paragraph", "bold",
        "listBullet", "listOrdered", "link", "image", "file",
        "blockquote", "table", "customClass", "oembedly", "clean"
      ]
    }
  ],
  "customFields": []
}