---
import DefaultHead from './DefaultHead.astro';
import ScrollToTopButton from '@/components/ScrollToTopButton.astro';

interface Props {
  title: string;
  description: string;
  ogImage?: string;
}

const { title, description, ogImage } = Astro.props;

// ナビゲーションメニュー
const navigation = [
  { 
    name: 'むなかた子ども大学について', 
    href: '/about',
    hasSubmenu: true,
    submenu: [
      { name: 'ねらい・目的', href: '/about/aims' },
      { name: '代表者メッセージ', href: '/about/message' },
      { name: '事業概要', href: '/about/outline' }
    ]
  },
  { name: '年間スケジュール', href: '/schedule' },
  { 
    name: '講座内容', 
    href: '/course',
    hasSubmenu: true,
    submenu: [
      { name: 'メインキャンパス', href: '/course/main-campus' },
      { name: '特設講座', href: '/course/special-course' },
      { name: 'むなかた子ども大学の日', href: '/course/mku-day' },
      { name: '夏の課外授業', href: '/course/summer-course' }
    ]
  },
  { name: 'お知らせ', href: '/news' },
  { name: '過去の実績', href: '/report' },
  { name: 'お問い合わせ', href: '/contact' },
];

// 現在のパスを取得
const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="ja">
<head>
  <DefaultHead 
    title={title} 
    description={description} 
    ogImage={ogImage} 
  />
</head>
<body>
  <!-- Google Tag Manager (noscript) -->
  <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-M84RCZMF"
  height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
  <!-- End Google Tag Manager (noscript) -->

  <!-- ヘッダー -->
  <header class="header">
    <div class="u-container">
      <div class="header__inner">
        <!-- ロゴ -->
        <div class="header__logo">
          <a href="/" class="header__logo-link">
            <img src="/logos/logo-del_mku_aside-color1.svg" alt="むなかた子ども大学" class="header__logo-image" />
          </a>
        </div>

        <!-- ナビゲーション -->
        <nav class="header__nav">
          <ul class="header__nav-list">
            {navigation.map((item) => (
              <li class={`header__nav-item ${item.hasSubmenu ? 'header__nav-item--dropdown' : ''}`}>
                <a 
                  href={item.href} 
                  class="header__nav-link"
                >
                  {item.name}
                  {item.hasSubmenu && (
                    <svg class="header__nav-arrow" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M6 9L12 15L18 9"/>
                    </svg>
                  )}
                </a>
                {item.hasSubmenu && (
                  <ul class="header__nav-submenu">
                    {item.submenu?.map((subitem) => (
                      <li class="header__nav-submenu-item">
                        <a 
                          href={subitem.href} 
                          class={`header__nav-submenu-link ${currentPath === subitem.href ? 'header__nav-submenu-link--active' : ''}`}
                        >
                          {subitem.name}
                        </a>
                      </li>
                    ))}
                  </ul>
                )}
              </li>
            ))}
          </ul>
        </nav>

        <!-- モバイルメニューボタン -->
        <button class="header__menu-button" id="menu-button" aria-label="メニューを開く">
          <span class="header__menu-bar"></span>
          <span class="header__menu-bar"></span>
          <span class="header__menu-bar"></span>
        </button>
      </div>
    </div>

    <!-- モバイルメニュー -->
    <nav class="header__mobile-nav" id="mobile-nav">
      <!-- 閉じるボタン -->
      <button class="header__mobile-close" id="mobile-close" aria-label="メニューを閉じる">
        <svg class="header__mobile-close-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M18 6L6 18"/>
          <path d="M6 6l12 12"/>
        </svg>
      </button>
      
      <ul class="header__mobile-nav-list">
        {navigation.map((item) => (
          <li class={`header__mobile-nav-item ${item.hasSubmenu ? 'header__mobile-nav-item--dropdown' : ''}`}>
            <div class="header__mobile-nav-wrapper">
              <a 
                href={item.href} 
                class="header__mobile-nav-link"
              >
                {item.name}
              </a>
              {item.hasSubmenu && (
                <button class="header__mobile-nav-toggle" data-submenu={item.name}>
                  <svg class="header__mobile-nav-arrow" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M6 9L12 15L18 9"/>
                  </svg>
                </button>
              )}
            </div>
            {item.hasSubmenu && (
              <ul class="header__mobile-nav-submenu" data-submenu-content={item.name}>
                {item.submenu?.map((subitem) => (
                  <li class="header__mobile-nav-submenu-item">
                    <a 
                      href={subitem.href} 
                      class="header__mobile-nav-submenu-link"
                    >
                      {subitem.name}
                    </a>
                  </li>
                ))}
              </ul>
            )}
          </li>
        ))}
      </ul>
    </nav>
  </header>

  <!-- メインコンテンツ -->
  <main class="main">
    <slot />
  </main>

  <!-- フッター -->
  <footer class="footer">
    <div class="u-container">
      <div class="footer__main">
        <!-- 左側：ロゴ・運営情報・お問い合わせ -->
        <div class="footer__left">
          <!-- フッターロゴ -->
          <div class="footer__logo">
            <img src="/logos/logo-del_mku_vertical-color2.svg" alt="むなかた子ども大学" class="footer__logo-image" />
          </div>

          <!-- 運営情報 -->
          <div class="footer__org">
            <p class="footer__org-title">運営：</p>
            <div class="footer__org-details">
              <p>宗像市 教育委員会</p>
              <p>（教育部 教育総務課 地域教育連携室 グローバル人材育成係）</p>
              <p>宗像市役所　本館３階</p>
              <p class="footer__phone">0940-36-1169</p>
            </div>
          </div>

          <!-- お問い合わせボタン -->
          <div class="footer__contact">
            <a href="/contact" class="base-button base-button--white">
              <span class="base-button__text">お問い合わせ</span>
              <div class="base-button__icon">
                <div class="base-button__icon-arrow"></div>
              </div>
            </a>
          </div>
        </div>

        <!-- 右側：メニュー -->
        <div class="footer__right">
          <nav class="footer__nav">
            <ul class="footer__nav-list">
              <li class="footer__nav-item"><a href="/" class="footer__nav-link">ホーム</a></li>
              <li class="footer__nav-item"><a href="/about" class="footer__nav-link">むなかた子ども大学について</a></li>
              <li class="footer__nav-item"><a href="/schedule" class="footer__nav-link">年間スケジュール</a></li>
              <li class="footer__nav-item"><a href="/course" class="footer__nav-link">講座内容</a></li>
              <li class="footer__nav-item"><a href="/news" class="footer__nav-link">お知らせ</a></li>
              <li class="footer__nav-item"><a href="/media" class="footer__nav-link">メディア掲載</a></li>
              <li class="footer__nav-item"><a href="/report" class="footer__nav-link">過去の実績</a></li>
              <li class="footer__nav-item"><a href="/contact" class="footer__nav-link">お問い合わせ</a></li>
              <li class="footer__nav-item"><a href="/privacy-policy" class="footer__nav-link">プライバシーポリシー</a></li>
            </ul>
          </nav>
        </div>
      </div>
    </div>

    <!-- バナーゾーン -->
    <div class="u-container">
      <div class="footer__banners">
        <div class="footer__banner-list">
          <div class="footer__banner-item">
            <a href="https://www.city.munakata.lg.jp/" target="_blank" rel="noopener noreferrer">
              <img src="/images/banners/banner_munakata-hp-01.webp" alt="宗像市ホームページ" class="footer__banner-image" />
            </a>
          </div>
          <div class="footer__banner-item">
            <a href="https://youtube.com/channel/UCV6F6imUn7XYxMHCE5auIFQ?si=m-DD3izrOchD3iAm" target="_blank" rel="noopener noreferrer">
              <img src="/images/banners/banner_mku-ch-01.webp" alt="むなかた子ども大学チャンネル" class="footer__banner-image" />
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- コピーライト -->
    <div class="u-container">
      <div class="footer__copyright">
        <p>© 2025 Munakata Kids University</p>
      </div>
    </div>
  </footer>

  <!-- ヘッダーナビゲーションの JavaScript -->
  <script>
    // モバイルメニューの開閉
    const menuButton = document.getElementById('menu-button');
    const mobileNav = document.getElementById('mobile-nav');
    const mobileClose = document.getElementById('mobile-close');
    
    function closeMenu() {
      mobileNav.classList.remove('header__mobile-nav--open');
      menuButton.classList.remove('header__menu-button--open');
      menuButton.setAttribute('aria-label', 'メニューを開く');
      document.body.style.overflow = '';
    }
    
    function openMenu() {
      mobileNav.classList.add('header__mobile-nav--open');
      menuButton.classList.add('header__menu-button--open');
      menuButton.setAttribute('aria-label', 'メニューを閉じる');
      document.body.style.overflow = 'hidden';
    }
    
    if (menuButton && mobileNav) {
      menuButton.addEventListener('click', () => {
        const isOpen = mobileNav.classList.contains('header__mobile-nav--open');
        
        if (isOpen) {
          closeMenu();
        } else {
          openMenu();
        }
      });
    }
    
    // 閉じるボタンのイベント
    if (mobileClose) {
      mobileClose.addEventListener('click', closeMenu);
    }

    // モバイルサブメニューの開閉
    const mobileSubmenuToggles = document.querySelectorAll('.header__mobile-nav-toggle');
    
    mobileSubmenuToggles.forEach(toggle => {
      toggle.addEventListener('click', () => {
        const submenuName = toggle.getAttribute('data-submenu');
        const submenu = document.querySelector(`[data-submenu-content="${submenuName}"]`);
        const arrow = toggle.querySelector('.header__mobile-nav-arrow');
        
        if (submenu && arrow) {
          const isOpen = submenu.classList.contains('header__mobile-nav-submenu--open');
          
          // 他のサブメニューを閉じる
          document.querySelectorAll('.header__mobile-nav-submenu--open').forEach(openSubmenu => {
            if (openSubmenu !== submenu) {
              openSubmenu.classList.remove('header__mobile-nav-submenu--open');
              const otherArrow = document.querySelector(`[data-submenu="${openSubmenu.getAttribute('data-submenu-content')}"] .header__mobile-nav-arrow`);
              if (otherArrow) {
                otherArrow.style.transform = 'rotate(0deg)';
              }
            }
          });
          
          if (isOpen) {
            submenu.classList.remove('header__mobile-nav-submenu--open');
            arrow.style.transform = 'rotate(0deg)';
          } else {
            submenu.classList.add('header__mobile-nav-submenu--open');
            arrow.style.transform = 'rotate(180deg)';
          }
        }
      });
    });
  </script>

  <!-- スクロールトップボタン -->
  <ScrollToTopButton />
</body>
</html>

<style lang="scss">
@import '../styles/_index';

/* ヘッダー */
.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background: transparent;
  box-shadow: none;
  
  // 2xl未満のパディング
  @include breakpoint-down(2xl) {
    padding: rem(16) rem(16) 0;
  }
  
  // 2xl以降のパディング
  @include breakpoint-up(2xl) {
    padding: rem(20) rem(50) 0;
  }
  
  .header__inner {
    background-color: $background-primary;
    backdrop-filter: blur(10px);
    border-radius: rem(32);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
    height: rem(64);
    
    @include breakpoint-up(xl) {
      height: rem(86);
      border-radius: rem(43);
    }
  }
  
  &__inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: none;
    margin: 0;
    padding: 0 0 0 rem(20);
    height: rem(64);
    
    @include breakpoint-up(xl) {
      padding: 0 0 0 rem(32);
      height: rem(80);
    }
    @include breakpoint-up(2xl) {
      padding: 0 rem(32);
    }
  }
  
  &__logo {
    flex-shrink: 0;
    
    &-link {
      display: block;
    }
    
    &-image {
      height: rem(32);
      width: auto;
      
      @include breakpoint-up(xl) {
        height: rem(50);
      }
    }
  }
  
  &__nav {
    display: none;
    
    @include breakpoint-up(2xl) {
      display: block;
    }
    
    &-list {
      display: flex;
      gap: rem(32);
      list-style: none;
    }
    
    &-item {
      position: relative;
      
      &--dropdown:hover {
        .header__nav-submenu {
          opacity: 1;
          visibility: visible;
          transform: translateX(-50%) translateY(0);
        }
        
        .header__nav-arrow {
          transform: rotate(180deg);
        }
      }
    }
    
    &-link {
      display: flex;
      align-items: center;
      gap: rem(4);
      font-weight: 500;
      color: $text-primary;
      @include font-ja-s(semibold);
      padding: rem(12) rem(8);
      transition: all 0.3s ease;
      text-decoration: none !important;
      white-space: nowrap;
      
      &:hover,
      &--active {
        color: $brand-secondary;
        text-decoration: none !important;
      }
    }
    
    &-arrow {
      width: rem(16);
      height: rem(16);
      transition: transform 0.3s ease;
      color: $border-primary;
    }
    
    &-submenu {
      position: absolute;
      top: rem(88);
      left: 50%;
      transform: translateX(-50%) translateY(-10px);
      background: $background-secondary;
      @include radius-m;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
      width: rem(620);
      padding: rem(20);
      opacity: 0;
      visibility: hidden;
      transition: all 0.3s ease;
      z-index: 1000;
      list-style: none;
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: rem(16);
      
      // 吹き出し風三角
      &::before {
        content: '';
        position: absolute;
        top: rem(-15);
        left: 50%;
        transform: translateX(-50%);
        width: 0;
        height: 0;
        border-left: rem(9) solid transparent;
        border-right: rem(9) solid transparent;
        border-bottom: rem(15) solid $background-secondary;
      }
      
      &-item {
        // グリッドアイテムなのでborder不要
      }
      
      &-link {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: rem(12) rem(16);
        width: 100%;
        height: rem(78);
        @include font-ja-s(semibold);
        color: $text-white;
        text-decoration: none !important;
        border-radius: rem(12);
        transition: all 0.3s ease;
        
        // デフォルトカラー設定
        &[href="/course/main-campus"] {
          background-color: $brand-secondary;
          &:hover {
            background-color: $brand-sub-yellow;
            color: $text-primary;
            text-decoration: none !important;
          }
        }
        
        &[href="/course/special-course"] {
          background-color: $brand-turquoise;
          &:hover {
            background-color: $brand-sub-turquoise;
            color: $text-primary;
            text-decoration: none !important;
          }
        }
        
        &[href="/course/mku-day"] {
          background-color: $brand-purple;
          &:hover {
            background-color: $brand-sub-purple;
            color: $text-primary;
            text-decoration: none !important;
          }
        }
        
        &[href="/course/summer-course"] {
          background-color: $brand-pink;
          &:hover {
            background-color: $brand-sub-pink;
            color: $text-primary;
            text-decoration: none !important;
          }
        }
        
        // 「むなかた子ども大学について」サブメニューのカラー設定
        &[href="/about/aims"] {
          background-color: $brand-primary;
          &:hover {
            background-color: #8fa8e2;
            color: $text-primary;
            text-decoration: none !important;
          }
        }
        
        &[href="/about/message"] {
          background-color: $brand-primary;
          &:hover {
            background-color: #8fa8e2;
            color: $text-primary;
            text-decoration: none !important;
          }
        }
        
        &[href="/about/outline"] {
          background-color: $brand-primary;
          &:hover {
            background-color: #8fa8e2;
            color: $text-primary;
            text-decoration: none !important;
          }
        }
        
        // 右側の矢印アイコン
        &::after {
          content: '';
          width: rem(16);
          height: rem(16);
          background-repeat: no-repeat;
          background-position: center;
          background-size: contain;
          transform: rotate(-90deg);
          transition: transform 0.5s ease;
        }
        
        // デフォルト状態の>アイコン（白色）
        &::after {
          background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 24 24' fill='none' stroke='white' stroke-width='2' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M6 9L12 15L18 9'/%3E%3C/svg%3E");
        }
        
        // ホバー状態の>アイコン（text-primary色 + 1周回転）
        &:hover::after {
          background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 24 24' fill='none' stroke='%23212121' stroke-width='2' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M6 9L12 15L18 9'/%3E%3C/svg%3E");
          transform: rotate(-90deg) rotate(360deg);
        }
      }
    }
  }
  
  &__menu-button {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: rem(4);
    width: rem(64);
    height: rem(64);
    background: $background-secondary;
    border: none;
    cursor: pointer;
    border-radius: rem(32);
    padding: rem(6);
    
    // xl以降でサイズを調整（既存のヘッダー高さに合わせる）
    @include breakpoint-up(xl) {
      width: rem(86);
      height: rem(86);
      border-radius: rem(43);
      gap: rem(6);
      padding: rem(8);
    }
    
    @include breakpoint-up(2xl) {
      display: none;
    }
    
    &:hover .header__menu-bar {
      background-color: $brand-primary;
    }
  }
  
  &__menu-bar {
    width: rem(20);
    height: 2px;
    background-color: $border-primary;
    transition: all 0.3s ease;
    border-radius: 0.5px;
    
    // xl以降でバーサイズを調整
    @include breakpoint-up(xl) {
      width: rem(24);
      height: 3px;
    }
    
    &:first-child {
      transform-origin: center;
    }
    
    &:nth-child(2) {
      transform-origin: center;
    }
    
