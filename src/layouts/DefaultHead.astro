---
interface Props {
  title: string;
  description: string;
  ogImage?: string;
}

const { title, description, ogImage } = Astro.props;

// デフォルトのサイト情報
const siteTitle = "むなかた子ども大学";
const siteUrl = import.meta.env.PUBLIC_SITE_URL || "https://munakata-kids-university.vercel.app";
const defaultOgImage = `${siteUrl}/og-image.png`;

// ページタイトルの組み立て
const pageTitle = title === siteTitle ? title : `${title} | ${siteTitle}`;
const finalOgImage = ogImage || defaultOgImage;
---

<!-- 基本メタタグ -->
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta name="description" content={description} />
<meta name="generator" content={Astro.generator} />

<!-- タイトル -->
<title>{pageTitle}</title>

<!-- ファビコン -->
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="icon" type="image/png" href="/favicon.png" />

<!-- OGP -->
<meta property="og:type" content="website" />
<meta property="og:title" content={pageTitle} />
<meta property="og:description" content={description} />
<meta property="og:url" content={Astro.url} />
<meta property="og:image" content={finalOgImage} />
<meta property="og:site_name" content={siteTitle} />
<meta property="og:locale" content="ja_JP" />

<!-- Twitter Card -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={pageTitle} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={finalOgImage} />

<!-- その他のメタタグ -->
<meta name="robots" content="index, follow" />
<meta name="author" content="むなかた子ども大学" />
<meta name="theme-color" content="#0066cc" />

<!-- Canonical URL -->
<link rel="canonical" href={Astro.url} />

<!-- RSS Feed -->
<link rel="alternate" type="application/rss+xml" title={siteTitle} href="/rss.xml" />

<!-- DNS prefetch -->
<link rel="dns-prefetch" href="//munakata-kids-unv.microcms.io" />

<!-- Preload -->
<link rel="preload" href="/fonts/font.woff2" as="font" type="font/woff2" crossorigin />

<!-- JSON-LD 構造化データ -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "むなかた子ども大学",
  "url": "https://munakata-kids-university.vercel.app",
  "logo": "https://munakata-kids-university.vercel.app/logo.png",
  "description": "宗像市の子どもたちに学びの機会を提供する教育プログラム",
  "address": {
    "@type": "PostalAddress",
    "addressCountry": "JP",
    "addressRegion": "福岡県",
    "addressLocality": "宗像市"
  }
}
</script>