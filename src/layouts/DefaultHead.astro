---
interface Props {
  title: string;
  description: string;
  ogImage?: string;
}

const { title, description, ogImage } = Astro.props;

// デフォルトのサイト情報
const siteTitle = "むなかた子ども大学";
const siteUrl = import.meta.env.PUBLIC_SITE_URL || "https://munakata-kids-unv.jp";
const defaultOgImage = `${siteUrl}/og-image.png`;

// ページタイトルの組み立て
const pageTitle = title === siteTitle ? title : `${title} | ${siteTitle}`;
const finalOgImage = ogImage || defaultOgImage;
---

<!-- Google Tag Manager -->
<script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
})(window,document,'script','dataLayer','GTM-M84RCZMF');</script>
<!-- End Google Tag Manager -->

<!-- 基本メタタグ -->
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta name="description" content={description} />
<meta name="generator" content={Astro.generator} />

<!-- タイトル -->
<title>{pageTitle}</title>

<!-- ファビコン -->
<link rel="icon" type="image/svg+xml" href="/favicon/favicon.svg" />
<link rel="icon" type="image/png" href="/favicon/favicon.png" />
<link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png" />
<link rel="icon" type="image/png" sizes="192x192" href="/favicon/icon-192.png" />
<link rel="icon" type="image/png" sizes="512x512" href="/favicon/icon-512.png" />

<!-- OGP -->
<meta property="og:type" content="website" />
<meta property="og:title" content={pageTitle} />
<meta property="og:description" content={description} />
<meta property="og:url" content={Astro.url} />
<meta property="og:image" content={finalOgImage} />
<meta property="og:site_name" content={siteTitle} />
<meta property="og:locale" content="ja_JP" />

<!-- Twitter Card -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={pageTitle} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={finalOgImage} />

<!-- その他のメタタグ -->
<meta name="robots" content="index, follow" />
<meta name="author" content="むなかた子ども大学" />
<meta name="theme-color" content="#0066cc" />

<!-- Canonical URL -->
<link rel="canonical" href={Astro.url} />

<!-- RSS Feed -->
<link rel="alternate" type="application/rss+xml" title={siteTitle} href="/rss.xml" />

<!-- DNS prefetch -->
<link rel="dns-prefetch" href="//munakata-kids-unv.microcms.io" />

<!-- Preload -->
<link rel="preload" href="/fonts/font.woff2" as="font" type="font/woff2" crossorigin />

<!-- JSON-LD 構造化データ -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "むなかた子ども大学",
  "url": "https://munakata-kids-unv.jp",
  "logo": "https://munakata-kids-unv.jp/logos/logo-del_mku_aside-color1.svg",
  "description": "宗像市の子どもたちに学びの機会を提供する教育プログラム",
  "address": {
    "@type": "PostalAddress",
    "addressCountry": "JP",
    "addressRegion": "福岡県",
    "addressLocality": "宗像市"
  }
}
</script>