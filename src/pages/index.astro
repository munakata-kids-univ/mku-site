    padding-top: rem(10);
    padding-bottom: rem(120);
    border-bottom-right-radius: rem(72);
  }
  
  // 右下の切り欠け部分の背景色を設定
  &::after {
    content: '';
    position: absolute;
    bottom: 0;
    right: 0;
    width: rem(60);
    height: rem(60);
    background-color: $brand-primary;
    z-index: -1;
  }
}

.news-media-wrapper {
