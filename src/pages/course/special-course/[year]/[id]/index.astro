  min-height: 100vh;
  background-color: $brand-sub-turquoise-low;
  
  // ドット柄背景
  background-image: 
    radial-gradient(circle, $brand-sub-turquoise 1.5px, transparent 1.5px),
    radial-gradient(circle, $brand-sub-turquoise 1.5px, transparent 1.5px);
  background-position: 0 0, 6.5px 6.5px;
  background-size: 13px 13px;
}

